
@model IEnumerable<EventEaseAppFinal.Models.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<!-- Filtering Options -->
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Index", "Event", FormMethod.Get))
        {
            <div class="form-inline">
                <!-- Event Type Dropdown -->
                <div class="form-group">
                    <label for="searchType">Event Type:</label>
                    @Html.DropDownList("searchType", new SelectList(ViewBag.EventTypes, "Name", "Name"), "All", new { @class = "form-control" })
                </div>

                <!-- Venue Dropdown -->
                <div class="form-group">
                    <label for="venueId">Venue:</label>
                    @Html.DropDownList("venueId", new SelectList(ViewBag.Venues, "VenueID", "VenueName"), "All", new { @class = "form-control" })
                </div>

                <!-- Date Range Filters -->
                <div class="form-group">
                    <label for="startDate">Start Date:</label>
                    <input type="date" id="startDate" name="startDate" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="endDate">End Date:</label>
                    <input type="date" id="endDate" name="endDate" class="form-control" />
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>
        }
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().EventType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Venue.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue.VenueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EventID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.EventID }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EventID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>